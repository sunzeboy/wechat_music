      },{
        "shopName":"来福士人民广场店",
        "lastTime":"2019-2-4"
      },{
        "shopName":"金桥国际广场",
        "lastTime":"2019-4-2"
      }],
      talent_list:[
          {
        "nickName":"张三",
        "shopTime":"22"
      },{
        "nickName":"李四",
        "shopTime":"10"
      },{
        "nickName":"王五",
        "shopTime":"8"
      }]
    }

    computed = {
      shops(){
        var array = this.$parent.globalData.businessData.shops
        if (!array) return;
        array.forEach(element => {
          // element.timeDesc = utils.timeDesc(element.lasthit)
          element.timeDesc = utils.timeDesc()
        });
        console.log(array);
        return array
      },
      
    }

    methods = {
      jumpToWebView (item) {
        this.$parent.globalData.current_shopsid = item.sid
        wepy.navigateTo({
          url: '/pages/shop_home?shopsid='+item.sid
        })
      }
    }
    custom_lastTime(index){
      return '上次逛店时间：'+ utils.timeDesc(this.$parent.globalData.businessData.shops[index].lasthit)
    }
    events = {
      
    }

    onLoad() {
      
    }
  }
</script>
